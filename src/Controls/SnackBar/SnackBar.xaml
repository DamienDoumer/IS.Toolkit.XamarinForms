<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IS.Toolkit.XamarinForms.Controls.SnackBar"
             MinimumHeightRequest="{OnPlatform Android=70, iOS=75, UWP=80}"
             HorizontalOptions="FillAndExpand"
             BackgroundColor="SkyBlue"
             x:Name="SnackB"
             VerticalOptions="End">
    <ContentView.GestureRecognizers>
    </ContentView.GestureRecognizers>
  <ContentView.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
            <Button Grid.Column="1" HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Center"/>
        </Grid>
  </ContentView.Content>
</ContentView>